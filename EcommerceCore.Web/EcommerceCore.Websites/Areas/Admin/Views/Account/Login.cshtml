<script src="~/assets/js/modernizr.min.js"></script>

<div class="account-pages"></div>
<div class="clearfix"></div>
<div class="wrapper-page">
    <div class="text-center">
        <a href="/" class="logo">Admin-<span><span>Managmenent</span></span></a>
        <h5 class="text-muted m-t-0 font-600">Hệ Thống Quản Lý</h5>
    </div>
    <div class="m-t-40 card-box">
        <div class="text-center">
            <h4 class="text-uppercase font-bold m-b-0">Đăng nhập</h4>
        </div>
        <div class="panel-body">
            <form class="form-horizontal m-t-20" new { ReturnUrl = ViewBag.ReturnUrl } method="post" action="/admin/account/login">
                @Html.AntiForgeryToken()
                @Html.ValidationMessage("CustomError", new { @class = "text-danger" })
                @Html.ValidationSummary(true, null, new { @class = "form-group field-validation-error" })
                <div class="form-group ">
                    <div class="col-xs-12">
                        <input class="form-control" name="Email" type="text" required="" placeholder="Email đăng nhập">
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        <input class="form-control" name="Password" type="password" required="" placeholder="Mật khẩu">
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>
                <div class="form-group ">
                    <div class="col-xs-12">
                        <div class="checkbox checkbox-custom">
                            <input id="checkbox-signup" type="checkbox">
                            <label for="checkbox-signup">
                                Ghi nhớ
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group text-center m-t-30">
                    <div class="col-xs-12">
                        <button class="btn btn-custom btn-bordred btn-block waves-effect waves-light" type="submit">Đăng nhập</button>
                    </div>
                </div>
                <div class="form-group m-t-30 m-b-0">
                    <div class="col-sm-12">
                        <a href="/admin/account/forgotpassword" class="text-muted"><i class="fa fa-lock m-r-5"></i> Quên mật khẩu?</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

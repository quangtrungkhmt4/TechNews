@using EcommerceCore.Domain.Enums
@using EcommerceCore.Websites.Areas.Admin.Controllers
@using EcommerceCore.Websites.Areas.Admin.Models.ViewModels

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Quản lý Products</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="tblCategory" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Stt</th>
                            <th>Tên Url </th>
                            <th>Tiêu đề</th>
                            <th>Sku</th>
                            <th> Giá</th>
                            <th>Lượt xem</th>
                            <th>Từ khóa</th>
                            <th>Mô tả</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            if (ViewBag.Products != null)
                            {
                                var index = 0;
                                foreach (var item in ViewBag.Products as List<ProductViewModel>)
                                {
                                    index++;
                                    <tr>
                                        <td>@index</td>
                                        <td>@string.Format("{0}", item.UrlName.Length > 40 ? item.UrlName.Substring(0, 40) + "..." : item.UrlName)</td>
                                        <td>@string.Format("{0}", item.Title.Length > 40 ? item.Title.Substring(0, 40) + "..." : item.Title)</td>
                                        <td>@item.Sku</td>
                                        <td>@item.Price</td>
                                        <td>@item.View</td>
                                        <td>@item.Keyword</td>
                                        <td>@string.Format("{0}", item.Description.Length > 40 ? item.Description.Substring(0, 40) + "..." : item.Description)</td>
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->

    </div>
    <!-- /.col -->
</div>



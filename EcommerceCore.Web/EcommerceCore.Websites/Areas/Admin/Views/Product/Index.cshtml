@using EcommerceCore.Domain.Enums
@using EcommerceCore.Websites.Areas.Admin.Controllers
@using EcommerceCore.Websites.Areas.Admin.Models.ViewModels

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Quản lý Product</h3>
            </div>
            <div class="panel-heading">
                <a href="@Url.Action("Export" ,"Categories")" class="btn btn-primary">Export</a>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="tblCategory" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tên sản phẩm</th>
                            <th>Thể loại</th>
                            <th>Mã gì đó</th>
                            <th>Giá</th>
                            <th>Mô tả</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            if (ViewBag.products != null)
                            {
                                var index = 0;
                                foreach (var item in ViewBag.products as List<ProductViewModel>)
                                {
                                    index++;
                                    <tr>
                                        <td>@index</td>
                                        <td>@string.Format("{0}", item.UrlName.Length > 40 ? item.UrlName.Substring(0, 40) + "..." : item.UrlName)</td>
                                        <td>@string.Format("{0}", item.Title.Length > 60 ? item.Title.Substring(0, 60) + "..." : item.Title)</td>
                                        <td>@string.Format("{0}", item.Sku.Length > 60 ? item.Sku.Substring(0, 60) + "..." : item.Sku)</td>
                                        
                                        <td>@item.Price</td>
                                        <td>@string.Format("{0}", item.Description.Length > 60 ? item.Description.Substring(0, 60) + "..." : item.Description)</td>

                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->

    </div>
    <!-- /.col -->
</div>

<!-- MODAL -->
<div id="delete-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="custom-width-modalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog" style="width:25%;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title" id="custom-width-modalLabel">Xóa</h4>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc muốn hệ thống xóa danh mục này và toàn bộ danh mục con?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary waves-effect waves-light" onclick="categoryController.deleteCategory()">Xóa</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
<!-- end Modal -->

@section Scripts
{

    <script type="text/javascript">

    </script>
}
